# Domain and URL Configuration
DOMAIN_NAME=demo.rybbit.com
BASE_URL="https://${DOMAIN_NAME}"

# Authentication and Security
BETTER_AUTH_SECRET=insecure-secret
DISABLE_SIGNUP=false

# Webserver Configuration
# Set to false to disable the built-in Caddy webserver
USE_WEBSERVER=true

# Ports (all configurable via env)
# Host mappings: "host:container" or "port" (exposes port on all interfaces)
HOST_BACKEND_PORT=127.0.0.1:3001:3001
HOST_CLIENT_PORT=127.0.0.1:3002:3002
HOST_CLICKHOUSE_PORT=8123:8123
HOST_POSTGRES_PORT=5432:5432
# Container/internal ports (used by backend and by Coolify/Traefik)
BACKEND_PORT=3001
CLIENT_PORT=3002
CLICKHOUSE_PORT=8123
POSTGRES_PORT=5432

# ClickHouse Database Configuration
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=frog
# Optional: override image (Coolify)
# CLICKHOUSE_IMAGE=clickhouse/clickhouse-server:25.4.2

# PostgreSQL Database Configuration
POSTGRES_DB=analytics
POSTGRES_USER=frog
POSTGRES_PASSWORD=frog
# Optional: override image (Coolify)
# POSTGRES_IMAGE=postgres:17.4

# Coolify / Traefik (only for docker-compose.coolify.yaml)
# TRAEFIK_NETWORK=coolify
# TRAEFIK_ENTRYPOINT=https
# TRAEFIK_BACKEND_PRIORITY=100
# TRAEFIK_CLIENT_PRIORITY=10
# BACKEND_IMAGE=ghcr.io/rybbit-io/rybbit-backend:latest
# CLIENT_IMAGE=ghcr.io/rybbit-io/rybbit-client:latest
# IMAGE_TAG=latest

# External Service Tokens (optional)
MAPBOX_TOKEN=
